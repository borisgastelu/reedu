//- Create tabs with an icon and label, using the tabs-positive style.
//- Each tab's child <ion-nav-view> directive will have its own
//- navigation history that also transitions its views in and out.
ion-tabs.tabs-icon-top.tabs-color-active-positive
	//- Chats Tab  
	ion-tab(title="Chats", icon-off="ion-ios-chatboxes-outline", icon-on="ion-ios-chatboxes", ui-sref="tab.chats")
		ion-nav-view(name="tab-chats")

	//- Map Tab
	ion-tab(title="Map", icon-off="ion-map", icon-on="ion-map", ui-sref="tab.map")
		ion-nav-view(name="tab-map")

	//- Pre-Qualify Tab
	ion-tab(title="Pre-Qualify", icon-off="ion-ios-compose-outline", icon-on="ion-ios-compose", ui-sref="tab.pre-qualify")
		ion-nav-view(name="tab-pre-qualify")

	//- Account Tab
	ion-tab(title="Account", icon-off="ion-person", icon-on="ion-person", ui-sref="tab.account")
		ion-nav-view(name="tab-account")
